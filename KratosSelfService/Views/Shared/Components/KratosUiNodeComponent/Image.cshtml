@model KratosUiNodeArgs

@{
    var attributes = Model.node.Attributes.GetKratosUiNodeImageAttributes();
}

<div class="field">
    <img src="@attributes.Src" class="image" height="@attributes.Height" width="@attributes.Width"
         id="@attributes.Id" alt="image"/>
    <KratosUiTextMessage Message="@Model.node.Messages"/>
</div>