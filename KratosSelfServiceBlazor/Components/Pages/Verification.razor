@page "/verification"
@layout CardLayout
@inject NavigationManager nav
@inject ILogger<Login> logger
@inject ApiService api
@inject IHttpContextAccessor accessor
@attribute [AllowAnonymous]
@using KratosSelfServiceBlazor.Components.Elements
@using KratosSelfServiceBlazor.Components.OryElements
@using global::Ory.Kratos.Client.Model

<PageTitle>@OryTranslator.Get("verification.title")</PageTitle>

<h1 class="title has-text-centered">@OryTranslator.Get("verification.title")</h1>

@if (_isLoading)
{
    <Spinner/>
}
else
{
    <hr/>
    <KratosUiTextMessages list="@_flow.Ui.Messages"/>

    <KratosUiComponent ui="@_flow.Ui" flowType="@FlowType.Verification"/>
}